<Window x:Class="PSEGet3.Windows.ExchangeNoticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exchange Notice" Height="300" Width="300" ShowInTaskbar="True" ResizeMode="NoResize"
        HorizontalContentAlignment="Stretch">
    <StackPanel HorizontalAlignment="Stretch">
        <ScrollViewer Height="550" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="noticeText" Margin="5" />
        </ScrollViewer>
    </StackPanel>
</Window>